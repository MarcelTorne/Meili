<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.epfl.meili">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Meili">
        
        <activity android:name=".PhotoDemoActivity" />
        <activity
            android:name=".photo.CameraActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".photo.PhotoDisplayActivity"
            android:parentActivityName=".photo.CameraActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".photo.CameraActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".messages.ChatLogActivity" />
        <activity
            android:name=".poi.PoiActivity"
            android:parentActivityName=".map.MapActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".map.MapActivity" />
        </activity>

        <activity android:name=".home.GoogleSignInActivity" />
        <activity
            android:name=".review.ReviewsActivity"
            android:parentActivityName=".MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".map.MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".forum.ForumActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".forum.PostActivity"
            android:parentActivityName=".forum.ForumActivity"/>
    </application>

</manifest>