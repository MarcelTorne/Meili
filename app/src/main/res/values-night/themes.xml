        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_purple</item>
        <!-- Making background light blue -->
        <item name="android:windowBackground">@color/black_purple</item>
        <item name="android:colorBackground">@color/black_purple</item>
        <!-- Button Color -->
        <item name="colorAccent">@color/white_blue</item>
        <item name="colorButtonNormal">@color/white_blue</item>
        <item name="android:colorButtonNormal">@color/white_blue</item>
