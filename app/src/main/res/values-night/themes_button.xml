<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meili.button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_purple</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_purple</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Making background light blue -->
        <item name="android:windowBackground">@color/white_blue</item>
        <item name="android:colorBackground">@color/white_blue</item>
        <!-- Button Color -->
        <item name="colorAccent">@color/pink</item>
    </style>
</resources>